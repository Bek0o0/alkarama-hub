{
  "name": "alkarama-hub",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "postinstall": "npm --prefix client ci || npm --prefix client install",
    "build": "npm --prefix client run build",
    "start": "node server.js",
    "dev:api": "node server.js",
    "dev:ui": "npm --prefix client start",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:ui\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "json-server": "^0.17.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
